{
  "name": "receipt-generator",
  "description": "Receipt PDF generator",
  "version": "0.1.0",
  "main": "./dist/main.js",
  "homepage": "./",
  "build": {
    "appId": "receipt-pdf",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "data"
    },
    "productName": "Receipt PDF Generator",
    "win": {
      "publish": {
        "provider": "github",
        "owner": "antoniogamiz"
      },
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "receipt-pdf.exe"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "babel-preset-react": "^6.24.1",
    "electron-is-dev": "^1.2.0",
    "electron-pdf-window": "^1.0.12",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "read-excel-file": "^4.0.7"
  },
  "scripts": {
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "dev:react": "NODE_ENV=development webpack-dev-server --config webpack.react.config.js --mode development",
    "build": "npm run build && electron-builder --win -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "babel-loader": "^8.1.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "electron-packager": "^15.1.0",
    "electron-reload": "^1.5.0",
    "html-webpack-plugin": "^4.4.1",
    "nodemon": "^2.0.4",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antoniogamiz/receipt-generator.git"
  },
  "keywords": [],
  "author": "@antoniogamiz",
  "email": "antoniogamiz10@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/antoniogamiz/receipt-generator/issues"
  }
}